{
  "name": "local-llm-dashboard",
  "version": "1.0.0",
  "description": "Local LLM API Dashboard",
  "main": "dashboard.json",
  "dashboard": {
    "id": null,
    "title": "Local LLM API Monitoring",
    "tags": ["local-llm", "api", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Response Times",
        "type": "timeseries",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Chat Requests",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"local-llm-api\"} |= \"Chat request\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "RAG Queries",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"local-llm-api\"} |= \"RAG query\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"local-llm-api\"} |= \"ERROR\" or {job=\"local-llm-api\"} |= \"error\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s"
  }
}
