# Environment Configuration
# Copy this file to .env and update values

# API Configuration
PORT=3000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# LocalAI Configuration
LOCALAI_URL=http://localai:8080
LOCALAI_MODEL=llama3
LOCALAI_BACKEND=default
# Set to 'metal' for Apple Silicon acceleration: LOCALAI_BACKEND=metal

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/localllm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=localllm

# Observability
LOKI_URL=http://loki:3100
LOG_LEVEL=info

# Docker Hub (for CI/CD)
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-dockerhub-username
DOCKER_IMAGE_NAME=local-llm

# Optional: Model Configuration
MODEL_CONTEXT_LENGTH=4096
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=512

# Vector Search Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSIONS=384
RAG_TOP_K=5
