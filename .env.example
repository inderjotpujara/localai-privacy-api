# LocalAI Privacy API Environment Configuration
# Copy this file to .env and customize as needed

# API Configuration
NODE_ENV=production
JWT_SECRET=your-super-secure-jwt-secret-change-this-now
LOG_LEVEL=info
LOCALAI_MODEL=llama3

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secure-password-change-this
POSTGRES_DB=localllm
DATABASE_URL=postgres://postgres:secure-password-change-this@postgres:5432/localllm

# LocalAI Configuration (optional - has sensible defaults)
# DEBUG=false
# CONTEXT_SIZE=4096
# THREADS=4
